@{ Layout = "Forum"; }
@model UnturnedWebForum.Models.RegisterModel

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>UnturnedDonate</title>
    <link rel="stylesheet" href="~/css/main.css" />
    <link rel="stylesheet" href="~/css/profile.css" />
    <link rel="stylesheet" href="~/css/ProfileServerAdd.css"/>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:100,100italic,200,200italic,300,300italic,regular,italic,500,500italic,600,600italic,700,700italic,800,800italic,900,900italic" rel="stylesheet" />
</head>
                <form class="inp" asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
                    <div class="validation" asp-validation-summary="ModelOnly"></div>
                    <div class="input-field">
                        <div class="input-text">
                            Имя пользователя
                        </div>
                        <input class="input-f" asp-for="UserName" placeholder="" value="" type="text">
                        <span asp-validation-for="UserName" />
                    </div>
                    <div class="input-field">
                        <div class="input-text">
                            Почта
                        </div>
                        <input class="input-f" asp-for="Email" placeholder="" value="" type="text">
                        <span asp-validation-for="Email" />
                    </div>
                    <div class="input-field">
                        <div class="input-text">
                            Пароль
                        </div>
                        <input class="input-f" asp-for="Password" placeholder="" value="" type="text">
                        <span asp-validation-for="Password" />
                    </div>
                    <div class="input-field">
                        <div class="input-text">
                            Повторите пароль
                        </div>
                        <input class="input-f" asp-for="ConfirmPassword" placeholder="" value="" type="text">
                        <span asp-validation-for="ConfirmPassword" />
                    </div>
                    <input class="add-button" type="submit" value="Регистрация" />
                </form>