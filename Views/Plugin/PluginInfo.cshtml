@{ 
    Layout = "Forum";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>UnturnedDonate</title>
    <link rel="stylesheet" href="~/css/main.css" />
    <link rel="stylesheet" href="~/css/PluginPage.css" />
    <link href="https://fonts.googleapis.com/css?family=Montserrat:100,100italic,200,200italic,300,300italic,regular,italic,500,500italic,600,600italic,700,700italic,800,800italic,900,900italic" rel="stylesheet" />
</head>
<div class="upper-bar-main">
            <div class="upper-bar">
                <div class="short-description">
                    <div class="short-description-text">Автор: @ViewBag.Plugin.Author</div>
                    <div class="short-description-text">Имя: @ViewBag.Plugin.Name</div>
                    <div class="short-description-text">Цена: @ViewBag.Plugin.Cost</div>
                    <div class="short-description-text">Контент в мастерской: @ViewBag.Plugin.HaveWorkshop</div>
                  </div>
                  <a asp-action="Buy" asp-controller="Plugin" asp-route-id="@ViewBag.Plugin.Name" class="buy-plugin-button">Купить</a>
            </div>
            <div class="upper-bar">
                <div class="full-description">
                    <div class="full-description-h1">Описание и команды</div>
                    <div class="full-description-text">
                        <p style="line-height:100%;"> @ViewBag.Plugin.Description</p>
                       
                    </div>
                </div>
            </div>
        </div>